{
  "name": "boutique",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start:all": "lerna run --parallel start",
    "boostrap": "lerna clean && lerna bootstrap --hoist",
    "clean": "lerna clean",
    "db:migrate": "lerna run --stream db:migrate",
    "db:seed": "lerna run --stream db:seed",
    "lint:all": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint:fix",
    "lint:staged": "lerna run lint:staged --concurrency 1",
    "postinstall": "lerna bootstrap --hoist"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lerna": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged",
      "pre-push": "npm run lint:all"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ExtensionEngine/boutique.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/ExtensionEngine/boutique/issues"
  },
  "homepage": "https://github.com/ExtensionEngine/boutique#readme",
  "license": "MIT"
}
